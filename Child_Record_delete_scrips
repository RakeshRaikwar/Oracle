 select P.TABLE_NAME,C.TABLE_NAME,P.CONSTRAINT_NAME,C.CONSTRAINT_NAME,COL.COLUMN_NAME,
  'DELETE FROM '
   ||C.TABLE_NAME || ' WHERE '||  COL.COLUMN_NAME || ' IN (10);'
  from user_constraints P INNER JOIN user_constraints C 
  ON P.CONSTRAINT_NAME=C.R_CONSTRAINT_NAME
  INNER JOIN USER_CONS_COLUMNS COL
  ON COL.CONSTRAINT_NAME=C.CONSTRAINT_NAME
  where P.table_name ='DEPT' and P.CONSTRAINT_TYPE='P' ;
  
